@page
@model WebApp_UnderTheHood.Pages.Account.LoginModel
@{
}

<div class="container border" style="padding:20px;">
    <form class="p-1" method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row mb-3">
            <div class="col-2">
                <label asp-for="Credential.UserName"></label>
            </div>
            <div class="col-4">
                <input class="form-control input-box input-md" type="text" asp-for="Credential.UserName" />
            </div>
            <div class="col-6">
                <span class="text-danger" asp-validation-for="Credential.UserName"></span>
            </div>
        </div>
        <div class="form-group row mb-3">
            <div class="col-2">
                <label asp-for="Credential.Password"></label>
            </div>
            <div class="col-4">
                <input class="form-control input-box input-md" type="password" asp-for="Credential.Password" />
            </div>
            <div class="col-6">
                <span class="text-danger" asp-validation-for="Credential.Password"></span>
            </div>
        </div>
        <div class="form-check row mb-3">
            <div class="col-2">
                <input class="form-check-input" type="checkbox" asp-for="Credential.RememberMe" />
                <label class="form-check-label" asp-for="Credential.RememberMe" style="cursor:pointer;"></label>
            </div>
            <div class="col-4"></div>
        </div>
        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-4 text-end">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
        </div>
    </form>
</div>