<div id="yesNoDialog" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bootstrap Modal title</h5>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-4"></div>
            <div class="modal-footer">
                <button id="dialogYes" type="button" class="btn btn-primary">Yes</button>
                <button id="dialogNo" type="button" class="btn btn-outline-secondary">No</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    var modalYesNo = function (message, yesCallback, noCallback) {

        $("#yesNoDialog.modal .modal-body").text(message);

        $("#dialogYes").off("click"); $("#dialogNo").off("click");

        $("#dialogYes").on("click", function () {
            hideYesNoDlg();
            if (yesCallback != null) {
                yesCallback();
            }
        });

        $("#dialogNo").on("click", function () {
            hideYesNoDlg();
            if (noCallback != null) {
                noCallback();
            }
        });

        const yesNoDialog = new bootstrap.Modal("#yesNoDialog", {
            backdrop: 'static',
            keyboard: false
        });

        yesNoDialog.show();

        $("#yesNoDialog").removeAttr("aria-hidden");
    }

    function hideYesNoDlg(){
        $("#yesNoDialog").modal('hide');
    }

</script>

