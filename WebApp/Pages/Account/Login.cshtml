@page
@model WebApp.Pages.Account.LoginModel
@{
}

<h3>User Login</h3>
<br/>

<div class="container border" style="padding:20px;">
    <form class="p-1" method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row pb-3">
            <div class="col-2">
                <label asp-for="LoginViewModel.Email"></label>
            </div>
            <div class="col-4">
                <input class="form-control input-box input-md" type="text" asp-for="LoginViewModel.Email" />
            </div>
            <div class="col-6">
                <span class="text-danger" asp-validation-for="LoginViewModel.Email"></span>
            </div>
        </div>
        <div class="form-group row pb-3">
            <div class="col-2">
                <label asp-for="LoginViewModel.Password"></label>
            </div>
            <div class="col-4">
                <input class="form-control input-box input-md" type="password" asp-for="LoginViewModel.Password" />
            </div>
            <div class="col-6">
                <span class="text-danger" asp-validation-for="LoginViewModel.Password"></span>
            </div>
        </div>
        <div class="form-check row pb-3">
            <div class="col-2">
                <input class="form-check-input" type="checkbox" asp-for="LoginViewModel.RememberMe" />
                <label class="form-check-label" asp-for="LoginViewModel.RememberMe" style="cursor:pointer;"></label>
            </div>
            <div class="col-4"></div>
        </div>
        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-4 text-end">
                <a class="btn btn-link text-decoration-none" href="/Account/Register">Sign Up</a>
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
        </div>
    </form>
    @if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
    {
        <div class="alert alert-success mt-4" role="alert">
            @Model.SuccessMessage
        </div>
    }
</div>