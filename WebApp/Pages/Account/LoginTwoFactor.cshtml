@page
@model WebApp.Pages.Account.LoginTwoFactorModel
@{
}

<p>
    <h3>Please enter the Code from your email:</h3>
</p>
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="EmailMFA.SecurityCode"></label>
            </div>
            <div class="col-4">
                <input type="text" asp-for="EmailMFA.SecurityCode" class="form-control" />                
            </div>
            <div class="col-6">
                <span class="text-danger" asp-validation-for="EmailMFA.SecurityCode"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="hidden" asp-for="EmailMFA.RememberMe" />
            </div>
            <div class="col-4 text-end">
                <input type="submit" class="btn btn-primary" value="Verify" />
            </div>
        </div>
    </form>
</div>